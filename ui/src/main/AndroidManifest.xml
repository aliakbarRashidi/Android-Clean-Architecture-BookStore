<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amulyakhare.bookstore" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".ui.application.BookStoreApplication">
        <activity
            android:name=".ui.book.list.BookListActivity_"
            android:label="@string/book_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.book.detail.BookDetailActivity_"
            android:label="@string/title_activity_book_detail" >
        </activity>
    </application>

</manifest>
